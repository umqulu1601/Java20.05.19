package cargos;

public class Cargos {
	
	//Atributos
	private String cargo;
	private double salario;
	
	//Construtor
	public Cargos(String cargo, double salario) {
		this.cargo= cargo;
		this.salario= salario;
	}
	
	//Vale trnsporte
	public void vT() {
		System.out.println("O cargo: "+cargo+", terá um desconto de Vale Transporte no valor de R$ "+salario*0.06);
		
	}
}